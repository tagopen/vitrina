if (page.details)
  section.details
    .container.details__container
      .row.justify-content-center
        .col-22.col-lg-20
          h2.sub-heading.details__heading!= page.details.heading
      .row.justify-content-center
        .col-22.col-lg-20
          p.details__text!= page.details.text
          .details__link-group
            a.details__link(href=page.details.link.href)!= page.details.link.name