section.service
  .container
    .row
      .col-24
        h2.sub-heading.service__heading!= content.index.service.heading
    .row
      .col-24
        .tab(role='tabpanel')
          ul.hidden-md-up.list-unstyled.tab__control.tab-control(role='tablist')
            each item, key in content.index.service.tab.control
              li.tab-control__item(role='presentation')
                a.tab-control__link(class={"tab-control__link--active": key === 0}, href=item.target, role='tab')!= item.name
          .tab__content
            .row.justify-content-center.align-items-stretch
              - var i = 0
              each items, key in content.index.service.tab.panel
                - i++
                .col-20.col-md-24.col-lg-12
                  .tab__panel.panel(class={"tab__panel--active": (i - 1) === 0}, id=key, role='tabpanel')
                    .hidden-sm-down.row
                      .col-24
                        .panel__heading!= content.index.service.tab.control[i - 1].name
                    .row.justify-content-around.panel__row(id='tab-panel--' + key)
                      each item in items
                        .col.col-24.col-md-auto.col-lg-12.panel__item
                          .panel__photo
                            i.ic(class=item.icon)
                          .panel__name!= item.name
                          if (item.descr)
                            .panel__descr!= item.descr
