section.process
  .container
    .row
      .col-24
        h2.sub-heading.process__heading!= content.index.process.heading
    .row.justify-content-center
      .tab(role='tabpanel')
        ul.list-unstyled.tab__control.tab-control(role='tablist')
          each item, key in content.index.process.tab.control
            li.tab-control__item(role='presentation')
              a.tab-control__link(class={"tab-control__link--active": key === 0}, href=item.target, role='tab')!= item.name
        .tab__content
          .row
            - var i = 0
            each items, key in content.index.process.tab.panel
              - i++
              .col-24
                .tab__panel.deal(class={"tab__panel--active": (i - 1) === 0}, id=key, role='tabpanel')
                  .row.justify-content-between
                    each item, count in items
                      .col-24.col-md-7
                        .deal__item
                          .deal__photo(class={"deal__photo--none": (items.length - 1) === count})
                            i.ic.deal__icon(class=item.icon)
                          .deal__name!= item.name
                          .deal__descr!= item.descr.text
                            if (item.descr.link)
                              a.deal__link(href=item.descr.link.href)!= item.descr.link.name
                    
                  .deal__btn-group
                    a.btn.btn--default.deal__btn(href=content.index.process.tab.btns[i - 1].href)!= content.index.process.tab.btns[i - 1].name
                  .ol.hidden-md-up.list-unstyled.step-indicator
                    each item, count in items
                      li.step-indicator__item(class={"step-indicator__item--active": (count) === 0})!= (count + 1) + content.index.process.tab.carousel.indicator.name

